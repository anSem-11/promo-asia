.promo-asia-table__container {
	padding: 20px;
	background: radial-gradient(50.00% 81.67% at 50.00% 100.00%, rgba(246, 243, 239, 0.00) 0%, #F6F3EF 100%);
	font-family: Inter;
}

.promo-asia-table__text-wrapper {
	border-bottom: 1px solid #E5D9D9;
	padding: 20px 0;
}

.promo-asia-table__title {
	color: #2D3436;
	font-family: Inter;
	font-size: 26px;
	font-weight: 500;
	line-height: 130%;
	margin-bottom: 10px;
}

.promo-asia-table__text {
	color: #2D3436;
	font-family: Inter;
	font-size: 14px;
	font-weight: 400;
	line-height: 150%;
	margin-bottom: 15px;
}

.promo-asia-table .swiper-slide {
	display: flex;
}

.promo-asia-table .slide-values-container {
	display: flex;
	flex-direction: column;
	width: 100%;
	min-width: fit-content;
}

.promo-asia-table .slide-values-container span {
	padding: 5px 35px 5px 0;
	color: #2D3436;
	font-family: Inter;
	font-size: 12px;
	font-weight: 400;
	line-height: 150%;
}

.promo-asia-table .slide-values-container span:nth-child(1) {
	border-bottom: 1px solid #E5D9D9;
}

.promo-asia-table .slide-values-container span:nth-child(4) {
	font-weight: 600;
}

.promo-asia-broker__button {
	justify-content: center;
	align-items: center;
	max-width: fit-content;
	border-radius: 10px;
	background: #FFCE00;
	margin: 60px auto 0;
	display: none;
}

.promo-asia-broker__button a {
	color: #000;
	text-align: center;
	font-family: Inter;
	font-size: 18px;
	font-weight: 600;
	padding: 20px 25px;
	display: block;
}

@media (min-width: 1024px) {

	.promo-asia-table__container {
		display: flex;
		gap: 30px;
		justify-content: center;
		align-items: center;
	}

	.promo-asia-table__container>.promo-asia-table__text-wrapper {
		max-width: 370px;
		border-bottom: none;
		border-right: 1px solid #E5D9D9;
		padding-right: 30px;
	}

	.promo-asia-table__tableContainer {
		max-width: 770px;
		pointer-events: none;
	}

	.promo-asia-broker__button {
		display: flex;
	}
}